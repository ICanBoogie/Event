{
	"name": "icanboogie/event",
	"type": "library",
	"description": "Provides an event API",
	"keywords": [
		"event"
	],
	"homepage": "https://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "https://olvlvl.com/",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/Event/issues",
		"source": "https://github.com/ICanBoogie/Event"
	},
	"config": {
		"sort-packages": true
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=8.1",
		"icanboogie/accessor": "^2.0|^3.0|^4.0",
		"icanboogie/inflector": "^1.3|^2.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.5",
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"ICanBoogie\\": "lib/"
		},
		"files": [
			"lib/functions.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Test\\ICanBoogie\\": "tests"
		}
	}
}
